{
  "compilerOptions": {
    "lib": [
      "es5",
      "es6"
    ],
    "target": "es6",
    "strictNullChecks": true,
    "module": "commonjs",
    "esModuleInterop": true,
    "moduleResolution": "node",
    "outDir": "./dist",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "typeRoots": [
      "./node_modules/@types"
    ],
    "sourceMap": true,
    "types": [
      "node",
      "jest"
    ]
  },
  "include": [
    "./src",
    "./tests"
  ],
  "exclude": [
    "./node_modules"
  ]
}